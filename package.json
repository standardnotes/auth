    "nodemon": "^2.0.16",
    "pre-push": "^0.1.1",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "typescript": "4.3.5"
  },
  "pre-push": [
    "lint"
  ],
  "jest": {
